<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:id="@+id/search_rel_layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="StockSymbol"
        android:textSize="16dp"
        android:id="@+id/stock_symbol_text"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_alignTop="@id/stock_symbol_text"
        android:text="Stock Company Name"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:id="@+id/stock_company_name"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:text="equity"
        android:layout_alignTop="@id/stock_company_name"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:id="@+id/category"
        android:textSize="16dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_below="@id/category"/>

</RelativeLayout>