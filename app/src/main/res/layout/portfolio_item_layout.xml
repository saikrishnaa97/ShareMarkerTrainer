<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Stock Name"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/stock_name_portfolio"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_below="@id/stock_name_portfolio" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_below="@id/stock_name_portfolio"
    android:id="@+id/portfolio_item_detail_layout"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/stock_name_portfolio"
        android:text="Avg. Cost: \nRs. 50"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:id="@+id/cost_portfolio"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/stock_name_portfolio"
        android:layout_toRightOf="@id/cost_portfolio"
        android:id="@+id/partition_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/current_price_portfolio"
        android:layout_below="@id/stock_name_portfolio"
        android:layout_toRightOf="@id/partition_1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:text="Cur. Price\nRs. 55"
        android:textSize="24dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/partition_2"
        android:layout_below="@id/stock_name_portfolio"
        android:layout_toRightOf="@id/cost_portfolio"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/percent_change_portfolio"
        android:layout_below="@id/stock_name_portfolio"
        android:layout_toRightOf="@id/partition_2"
        android:layout_marginTop="4dp"
        android:text="% Change\n+5.0%"
        android:textSize="24dp"
        android:textColor="@color/white"
        />
</LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_below="@id/portfolio_item_detail_layout"
        />
</RelativeLayout>